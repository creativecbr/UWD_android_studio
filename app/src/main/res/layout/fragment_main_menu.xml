<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsService.MainMenu">


    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Small"
        android:minWidth="@dimen/buttonWidth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/shadow"
        android:fontFamily="@font/major_regular"
        android:text="@string/friendsGame"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:minWidth="@dimen/buttonWidth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="@dimen/menuButtonsMargin"
        android:enabled="false"
        android:fontFamily="@font/major_regular"
        android:text="@string/networkGame"
        android:background="@drawable/shadow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:minWidth="@dimen/buttonWidth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="@dimen/menuButtonsMargin"
        android:fontFamily="@font/major_regular"
        android:text="@string/howToPlay"
        android:background="@drawable/shadow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:minWidth="@dimen/buttonWidth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginTop="@dimen/menuButtonsMargin"
        android:fontFamily="@font/major_regular"
        android:text="@string/aboutAuthor"
        android:background="@drawable/shadow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>